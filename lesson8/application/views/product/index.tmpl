{% extends 'base.tmpl' %}

{% block page %}

<main class="product center">
    <img class="product__img" src="/public/images/gallery_normal/{{ product.info.image|escape }}" alt="img" width="400px">
    <p class="product__p">{{ product.info.name|escape }}</p>
    <p class="product__p">{{ product.info.description|escape }}</p>
    <p class="product__p">&#36; {{ product.info.price|escape }}</p>
    {% if product.status == 'incart' %}
        <a class="product__cart" href="/cart">product in cart</a>
    {% else %}    
        <button class="product__add" data-id="{{ product.info.id|escape }}">Add to cart</button>
    {% endif %}
</main>

{% include 'js/product.js.tmpl' %}

{% endblock %}